FROM ansible:0.1.0

# setup the app
RUN mkdir -p /project
#  touch /project/requirements.yml
WORKDIR /project

RUN groupadd -r dev && \
  useradd -r -g dev dev && \
  mkdir /home/dev && \
  chown -R dev:dev /home/dev && \
  chown -R dev:dev /project

# ansible-galaxy collextions
RUN ansible-galaxy collection install \
  kubernetes.core

USER dev
